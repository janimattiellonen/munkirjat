	rate = function(score, evt) {
		idStr = $(this).attr('id');
		
		pos = idStr.indexOf('-');
		
		id = idStr.substr(pos + 1, idStr.length);
		
		$.ajax({
			url: '/bookshelf/book/rate-book/',
			type: 'GET',
			data:  'id=' + id + '&rating=' + score,
			success: function(data)
			{
				$.ajax({
        			url: '/bookshelf/book/rate-unrated-book/',
        			type: 'GET',
        			success: function(data)
        			{
        				$('#book').html(data);
        			}
        		});	
			}
		
		});						
	}
	
